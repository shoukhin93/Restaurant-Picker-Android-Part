<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.restaurantpicker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UserRegistration"
            android:label="Register" />
        <activity
            android:name=".Login"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GetAllRestaurants"
            android:label="List of Restaurants" />
        <activity android:name=".RestaurantItems">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GetAllRestaurants" />
        </activity>
        <activity android:name=".SearchResult">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GetAllRestaurants" />
        </activity>
        <activity
            android:name=".ConfirmOrder"
            android:label="Confirm Order">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GetAllRestaurants" />
        </activity>
        <activity
            android:name=".UserProfile"
            android:label="User Profile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GetAllRestaurants" />
        </activity>
        <activity
            android:name=".UpdateProfile"
            android:label="Update Profile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UserProfile" />
        </activity>
        <activity
            android:name=".Setting"
            android:label="Setup Server">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GetAllRestaurants" />
        </activity>
    </application>

</manifest>